<div class="container" style="height:1100px;">
    <div class="cata_title">
        <h2>NEWS 수정</h2>
    </div>
    <div class="inquire_div">
      <form action= "/home/news_edit_com" method= "POST"  enctype="multipart/form-data" accept-charset="UTF-8">
           <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="inquire_name">
            <input type="text" value="<%=@news.title%>" style="padding-left:10px;" class="inquire_name" name="title">
            <input type="hidden" value="<%= @news.id %>" style="padding-left:10px;" class="inquire_name" name="id">
        </div>
        <div class="inquire_name">
            <input type="text" value="<%=@news.title_c%>" style="padding-left:10px;" class="inquire_name" name="title_c">
        </div>
        <div class="inquire_name">
            <input type="file" value="<%=@news.news_pic%>"  style="padding-left:10px;" class="inquire_file" name="pic">
        </div>
        <div class="inquire_content">
            <input type="textarea"  value="<%=@news.content%>" style="padding-left:10px;" class="inquire_content" name="content">
        </div>
        <div class="inquire_content">
            <input type="textarea"  value="<%=@news.content_c%>" style="padding-left:10px;" class="inquire_content" name="content_c">
        </div>
        <button type="submit" class="btn btn-success" style="margin:10px auto"> 등록하기</button>
        </form>
    </div>
</div>