<% if user_signed_in? %>
         <% if current_user.email == "admin@naver.com"%>
<div class="container" style="height:1100px;">
    <div class="cata_title">
        <h2>STORE 작성</h2>
    </div>
    <div class="inquire_div">
      <form action= "/home/store_upload" method= "POST"  enctype="multipart/form-data" accept-charset="UTF-8">
           <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="inquire_name">
            <input type="text" placeholder="상점 이름을 입력해주세요" style="padding-left:10px;" class="inquire_name" name="name">
        </div>
        <div class="inquire_name">
            <input type="text" placeholder="중문 상점 이름을 입력해주세요" style="padding-left:10px;" class="inquire_name" name="name_c">
        </div>
        <div class="inquire_name">
            <input type="text" placeholder="주소를 입력해주세요" style="padding-left:10px;" class="inquire_name" name="address">
        </div>
        <div class="inquire_name">
            <input type="text" placeholder="중문 주소를 입력해주세요" style="padding-left:10px;" class="inquire_name" name="address_c">
        </div>
        <div class="inquire_name">
            <input type="text" placeholder="전화번호를 입력해주세요" style="padding-left:10px;" class="inquire_name" name="phone">
        </div>
        <div class="inquire_name">
            <input type="file" placeholder="사진을 업로드 해주세요"  style="padding-left:10px;" class="inquire_file" name="pic">
        </div>
       <div class="inquire_name">
            <input type="text" placeholder="주중 업무 시간을 입력해주세요" style="padding-left:10px;" class="inquire_name" name="weekday">
        </div>
        <div class="inquire_name">
            <input type="text" placeholder="주말 업무 시간을 입력해주세요" style="padding-left:10px;" class="inquire_name" name="weekend">
        </div>
        <div class="inquire_name">
            <input type="text" placeholder="공휴일 업무 시간을 입력해주세요" style="padding-left:10px;" class="inquire_name" name="holiday">
        </div>
        <button type="submit" class="btn btn-success" style="margin:10px auto"> 등록하기</button>
        </form>
    </div>
</div>
<%else%>
<h3>접근이 불가능한 페이지 입니다.</h3>
<% end%>



<% end%>