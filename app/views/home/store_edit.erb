<div class="container" style="height:1100px;">
    <div class="cata_title">
        <h2>STORE 수정</h2>
    </div>
    <div class="inquire_div">
      <form action= "/home/store_edit_com" method= "POST"  enctype="multipart/form-data" accept-charset="UTF-8">
           <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="inquire_name">
            <input type="text" value="<%=@store.name%>" style="padding-left:10px;" class="inquire_name" name="name">
            <input type="hidden" value="<%=@store.id%>" style="padding-left:10px;" class="inquire_name" name="id">
        </div>
        <div class="inquire_name">
            <input type="text" value="<%=@store.name_c%>" style="padding-left:10px;" class="inquire_name" name="name_c">
        </div>
        <div class="inquire_name">
            <input type="text" value="<%=@store.address%>" style="padding-left:10px;" class="inquire_name" name="address">
        </div>
        <div class="inquire_name">
            <input type="text" value="<%=@store.address_c%>" style="padding-left:10px;" class="inquire_name" name="address_c">
        </div>
        <div class="inquire_name">
            <input type="text" value="<%=@store.phone%>" style="padding-left:10px;" class="inquire_name" name="phone">
        </div>
        <div class="inquire_name">
            <input type="file" value="<%=@store.photo%>" style="padding-left:10px;" class="inquire_file" name="pic">
        </div>
       <div class="inquire_name">
            <input type="text" value="<%=@store.weekday%>" style="padding-left:10px;" class="inquire_name" name="weekday">
        </div>
        <div class="inquire_name">
            <input type="text" value="<%=@store.weekend%>" style="padding-left:10px;" class="inquire_name" name="weekend">
        </div>
        <div class="inquire_name">
            <input type="text" value="<%=@store.holiday%>" style="padding-left:10px;" class="inquire_name" name="holiday">
        </div>
        <button type="submit" class="btn btn-success" style="margin:10px auto"> 등록하기</button>
        </form>
    </div>
</div>