

<div class="main_div1">
    <% if @bigmain.nil? %>
    <ul class="bxslider">
        <li><img src="/assets/1.jpg"></li>
        <li><img src="/assets/1.jpg"></li>
        <li><img src="/assets/1.jpg"></li>
        <li><img src="/assets/1.jpg"></li>
    </ul>
    <% else %>
    <ul class="bxslider">
        <li><%=image_tag @bigmain.pic1 %></li>
        <li><%=image_tag @bigmain.pic2 %></li>
        <li><%=image_tag @bigmain.pic3 %></li>
    </ul>
    <% end %>
    <div class="banner_box">
        <div class="news_box">
            <h4>NEWS</h4>
