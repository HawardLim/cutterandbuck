<div class="container">
    <div class="store_div">
        <div class="store_div_pic">
           <%=image_tag @store.photo %>
        </div>
        <div class="store_detail">
            <div class="store_detail_up">
                <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= @store.address_c %></p>
                <br>
                <p><span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span> <%= @store.phone%></p>
                <br>
                <br>
                <p><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Working Hour</p>
                <p> weekdays : <%= @store.weekday %> </p>
                <p> weekends : <%= @store.weekend %> </p>
                <p> holidays : <%= @store.holiday %> </p>
                <br>
            </div>
            <div class="store_name">
                <h4><%= @store.name_c %></h4>
            </div>
        </div>
    </div>
    <div class="cata_title">
        <h3>STORE LIST</h3s>
    </div>
    <div class="store_list">
        <% @stores.each do |s| %>
        <div class="store_each">
            <h5><%= s.name_c%></h5>
            <p><%= s.address_c %></p>
            <p><%= s.phone %></p>
            <br>
            <a href="/cn/store_detail/<%=s.id%>">详细事项</a>
        </div>
        <% end %>
    </div>
</div>