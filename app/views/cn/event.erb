<div class="container">
    <div class="cata_title">
        <h2>EVENT</h2>
    </div>
<table class="table">
        <thead>
         <tr class="table_head_row">
         <th class="table_head_num">号码</th>
         <th class="table_head_title">标题</th>
         <th class="table_head_day">注册日</th>
         <th class="table_head_day">点击数</th>
         </tr>
         </thead>
         <tbody>
              <% @event.each do |e| %> 
              <tr class="table_con_row">
              <td class=""><%= e.id %></td>
              <td><a href="/home/news_detail/<%=e.id%>"><%= e.title %></td>
              <td class=""><%= e.created_at.in_time_zone("Asia/Shanghai").strftime("%Y-%m-%d") %></td>
              <td><%= e.count %></td>
              </tr>
              <% end %>
         </tbody>
     </table>
     <div class="pagination_div"><%= will_paginate @event, :previous_label => t("<<"), :next_label => t(">>")%></div>
</div>