<div class="container" style="height:800px;">
    <div class="cata_title">
        <h2>NEWS</h2>
    </div>
<table class="table">
         <thead>
         <tr class="table_head_row">
         <th class="table_head_num">号码</th>
         <th class="table_head_title">标题</th>
         <th class="table_head_day">注册日</th>
         <th class="table_head_day">点击数</th>
         </tr>
         </thead>
         <tbody>
              <% @news.each do |n| %>
              <tr class="table_con_row">
              <td class=""><%= n.id %></td>
              <td><a href="/cn/news_detail/<%=n.id%>"><%= n.title_c %></td>
              <td class=""><%= n.created_at.in_time_zone("Asia/Shanghai").strftime("%Y-%m-%d") %></td>
              <td><%= n.count %></td>
              </tr> 
              <% end %>
         </tbody>
     </table>
     <div class="pagination_div"><%= will_paginate @news, :previous_label => t("<<"), :next_label => t(">>")%></div>
</div>